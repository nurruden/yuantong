# ============================================================
# 环境变量示例 - 复制为 .env 并填入真实值，切勿将 .env 提交到 Git
# cp .env.example .env
# ============================================================

# Django
SECRET_KEY=your-django-secret-key-at-least-50-chars
DEBUG=False
ALLOWED_HOSTS=jilinyuantong.top,www.jilinyuantong.top,localhost,127.0.0.1

# 数据库
DB_NAME=yuantong
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306

# 企业微信（登录与通讯录等）
WECHAT_CORP_ID=
WECHAT_APP_SECRET=
WECHAT_CONTACT_SECRET=
WECHAT_CORP_SECRET=
WECHAT_AGENT_ID=
WECHAT_MESSAGE_TOKEN=
WECHAT_ENCODING_AES_KEY=

# 可选：登录回调
REDIRECT_URI=

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_REDIS_URL=redis://localhost:6379/1

# EAS 接口（若使用）
EAS_API_HOST=
EAS_API_PATH_ADD=/geteasdata/addManufactureRec
EAS_API_PATH_UPDATE=/geteasdata/upManufactureRec
EAS_API_PATH_DELETE=/geteasdata/delManufactureRec
EAS_API_PATH_GET=/geteasdata/getManufactureRec

# 邮件（可选）
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@example.com
SERVER_EMAIL=server@example.com
ADMINS=

# 生产 HTTPS（可选）
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
